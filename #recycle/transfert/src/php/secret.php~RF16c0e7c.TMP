function getDailyKey(): string {
    if (defined('TRANSFERT_SECRET_SEED')) {
		$secret = TRANSFERT_SECRET_SEED;
	} else {
		$secret = '24Bo!CHG20Y{';   // secours
	}
    $day = date('Ymd'); // Format : 20250528
    return hash('sha256', hash('sha256', $secret . $day));
}
